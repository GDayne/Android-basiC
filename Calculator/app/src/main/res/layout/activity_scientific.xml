<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:weightSum="4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="6"
        android:background="@color/background_results">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:weightSum="1"
            android:background="@color/background_results">
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="0"
                android:id="@+id/txt_resultC"
                android:layout_gravity="center_horizontal"
                android:textSize="40sp"
                android:gravity="center_vertical|right"
                android:padding="10dp"
                android:textColor="@color/text_results_color"
                android:layout_weight="1"  />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:weightSum="1"
            android:background="@color/light_peach">
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text=" "
                android:id="@+id/txt_processC"
                android:textSize="20sp"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:textColor="@color/text_results_color"
                android:layout_weight="1" />
        </LinearLayout>

        ></LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="4"
        android:background="@color/light_pinkk">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="6"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:id="@+id/button_7"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:background="@null"
                    android:textColor="@color/number_pink"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:id="@+id/button_4"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:background="@null"
                    android:textColor="@color/number_pink"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/button_1"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:background="@null"
                    android:textColor="@color/number_pink"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:id="@+id/button_point"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:background="@null"
                    android:textColor="@color/number_pink"/>

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageButton_plusC"
                    android:layout_weight="1"
                    android:background="@color/ligth_pink"
                    android:textColor="@color/text_numbers_colors"
                    android:scaleType="centerInside"
                    android:src="@drawable/plus"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageButton_divideC"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="@color/text_numbers_colors"
                    android:scaleType="centerInside"
                    android:src="@drawable/divide"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="6"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:id="@+id/button_8"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:background="@null"
                    android:textColor="@color/number_pink"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:id="@+id/button_5"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:background="@null"
                    android:textColor="@color/number_pink"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/button_2"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:background="@null"
                    android:textColor="@color/number_pink"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/button_0"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:background="@null"
                    android:textColor="@color/number_pink"/>
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageButton_minusC"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="@color/text_numbers_colors"
                    android:scaleType="centerInside"
                    android:src="@drawable/minus"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageButton_crossC"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="@color/text_numbers_colors"
                    android:scaleType="centerInside"
                    android:src="@drawable/multiply"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="6"

                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:id="@+id/button_9"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:background="@null"
                    android:textColor="@color/number_pink"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/button_6"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:background="@null"
                    android:textColor="@color/number_pink"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/button_3"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:background="@null"
                    android:textColor="@color/number_pink"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:id="@+id/button_bot11"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:background="@null"
                    android:textColor="@color/number_pink"/>
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageButton_clearC"
                    android:layout_weight="1"
                    android:background="@color/light_pink1"
                    android:textColor="@color/text_numbers_colors"
                    android:scaleType="centerInside"
                    android:src="@drawable/c_white"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageButton_equalsC"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="@color/text_numbers_colors"
                    android:scaleType="centerInside"
                    android:src="@drawable/equals"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    />

            </LinearLayout>
             ></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:weightSum="6"
            android:background="@color/light_pink1"
            >


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sin"
                android:id="@+id/button_sin"
                style="@style/AlertDialog.AppCompat.Light"
                android:textColor="@color/pink_operation"
                android:singleLine="false"
                android:textSize="33sp"
                android:background="@color/light_pink1"
                android:clickable="true"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cos"
                android:id="@+id/button_cos"
                style="@style/AlertDialog.AppCompat.Light"
                android:textColor="@color/pink_operation"
                android:singleLine="false"
                android:textSize="33sp"
                android:background="@color/light_pink1"
                android:clickable="true"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tan"
                android:id="@+id/button_tan"
                style="@style/AlertDialog.AppCompat.Light"
                android:textColor="@color/pink_operation"
                android:singleLine="false"
                android:textSize="33sp"
                android:background="@color/light_pink1"
                android:clickable="true"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="√"
                android:id="@+id/button_root"
                style="@style/AlertDialog.AppCompat.Light"
                android:textColor="@color/pink_operation"
                android:singleLine="false"
                android:textSize="33sp"
                android:background="@color/light_pink1"
                android:clickable="true"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X^2"
                android:id="@+id/button_square"
                style="@style/AlertDialog.AppCompat.Light"
                android:textColor="@color/pink_operation"
                android:singleLine="false"
                android:textSize="33sp"
                android:background="@color/light_pink1"
                android:clickable="true"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:id="@+id/button_back"
                style="@style/AlertDialog.AppCompat.Light"
                android:textColor="@color/pink_operation"
                android:singleLine="false"
                android:textSize="33sp"
                android:background="@color/light_pink1"
                android:clickable="true"
                android:layout_weight="1"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>